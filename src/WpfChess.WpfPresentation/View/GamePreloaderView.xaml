<Window x:Class="WpfChess.WpfPresentation.View.GamePreloaderView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menu" Height="328" Width="370" Background="#FFB49C5B">
    <Window.Resources>
        <Style x:Key="CheckBoxStyle" TargetType="{x:Type CheckBox}">
            <Setter Property="Background" Value="#FFB78888" />
            <Setter Property="BorderBrush" Value="Brown" />
            <Setter Property="Foreground" Value="#D18F3446" />
            <Setter Property="Height" Value="16" />
            <Setter Property="Margin" Value="139,30,0,0" />
        </Style>
    </Window.Resources>    
    <StackPanel>
        <CheckBox IsChecked="{Binding Path=IsFirst}" Content="I am white" Style="{StaticResource CheckBoxStyle}" />
        <Button Content="One PC mode" Height="56" Width="127" Margin="12,20,0,0" Style="{StaticResource ButtonStyle}" Command="{Binding Path=GameButtonClickCommand}" CommandParameter="OnePcMode" />
        <Button Content="AI mode" Height="56" Width="127" Margin="12,30,0,0" Style="{StaticResource ButtonStyle}" Command="{Binding Path=GameButtonClickCommand}" CommandParameter="AiMode" />
    </StackPanel>
</Window>
